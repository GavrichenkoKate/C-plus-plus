#include <iostream>
 
using namespace std;
 
int main () {

    
void quickSort(int *a, int n) { 
     int l = 0;
    int r = n - 1;
    int mid = a[n / 2];  
      do {
        while(a[l] < mid) {
            l++;
        }
        while(a[r] > mid) {
            r--;
        }
        if (l <= r) {  //Меняем элементы местами
            int tmp = a[l];
            a[l] = a[r];
            a[r] = tmp;

            l++;
            r--;
        }
    } while (l <= r); 
    if(r > 0) {
        qsortRecursive(a, r + 1); //Левый кусок
    }
    if (l < n) {
        qsortRecursive(&a[l], n - l); //Првый кусок
    }
      }
  system("pause");
  return 0;
  }
